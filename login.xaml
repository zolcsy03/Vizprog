<Window x:Class="Valutavalto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        
        Title="Bejelentkezés" Height="450" Width="800"
        Background="#FF121212"
        WindowStartupLocation="CenterScreen">
 


    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="20">

            <TextBlock Text="Bejelentkezés"
                       FontSize="24"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <TextBox materialDesign:HintAssist.Hint="Felhasználónév"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Foreground="White"
                     Background="#222"
                     Margin="0,0,0,10" />

            <PasswordBox materialDesign:HintAssist.Hint="Jelszó"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Foreground="White"
                         Background="#222"
                         Margin="0,0,0,20" />

            <Button Content="Bejelentkezés"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="40"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    />
        </StackPanel>
    </Grid>
</Window>